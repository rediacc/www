---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero';
import Problem from '../components/Problem';
import Solutions from '../components/Solutions';
import EarlyAccess from '../components/EarlyAccess';
---

<BaseLayout
  title="Rediacc - Infrastructure Automation Platform | Accelerated Development Operations"
  description="Transform your development workflow with Rediacc's infrastructure automation platform. Get instant development environments, next-generation disaster recovery, and AI-safe operations. Join our early access program."
  keywords="infrastructure automation, development environments, disaster recovery, DevOps automation, CI/CD pipeline, cloud infrastructure, development operations, Model Context Protocol, AI-safe infrastructure"
  ogType="website"
  structuredDataType="organization"
>
  <Hero client:load />
  <Problem client:load />
  <Solutions client:load />
  <EarlyAccess client:load />

  <!-- Success/Error Messages -->
  <div class="message-overlay" id="message-overlay" role="dialog" aria-hidden="true">
    <div class="message-content">
      <div class="message-icon" id="message-icon"></div>
      <h3 class="message-title" id="message-title"></h3>
      <p class="message-text" id="message-text"></p>
      <button class="btn btn-secondary" id="message-close">Close</button>
    </div>
  </div>

  <!-- Image Modal -->
  <div class="image-modal" id="image-modal" role="dialog" aria-hidden="true" onclick="closeImageModal()">
    <div class="image-modal-content" onclick="event.stopPropagation()">
      <button class="image-modal-close" onclick="closeImageModal()" aria-label="Close image modal">&times;</button>
      <button class="nav-btn nav-prev" onclick="previousImage()" aria-label="Previous image">‹</button>
      <button class="nav-btn nav-next" onclick="nextImage()" aria-label="Next image">›</button>
      <div class="zoom-controls">
        <button class="zoom-btn zoom-in" onclick="zoomIn()" aria-label="Zoom in">+</button>
        <button class="zoom-btn zoom-out" onclick="zoomOut()" aria-label="Zoom out">−</button>
        <button class="zoom-btn zoom-reset" onclick="resetZoom()" aria-label="Reset zoom">⌂</button>
      </div>
      <div class="image-container">
        <img id="modal-image" src="" alt="" class="modal-image">
      </div>
      <div class="image-indicator">
        <span class="indicator-text" id="image-indicator">1 / 2</span>
      </div>
    </div>
  </div>
</BaseLayout>
